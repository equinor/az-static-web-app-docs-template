{
    "routes": [
        {
            "route": "/.auth/login/github",
            "statusCode": 404
        },
        {
            "route": "/.auth/login/twitter",
            "statusCode": 404
        },
        {
            "route": "/.auth/login/facebook",
            "statusCode": 404
        },
        {
            "route": "/.auth/login/google",
            "statusCode": 404
        },
        {
            "route": "/login",
            "redirect": "/.auth/login/aad"
        },
        {
            "route": "/logout",
            "redirect": "/.auth/logout"
        },
        {
            "route": "/authenticated",
            "allowedRoles": [
                "authenticated"
            ]
        },
        {
            "route": "/reader_role",
            "allowedRoles": [
                "reader"
            ]
        }
    ],
    "responseOverrides": {
        "401": {
            "redirect": "/login",
            "statusCode": 302
        },
        "403": {
            "rewrite": "/unauthorized.html"
        }
    },
    "mimeTypes": {
        ".json": "text/json",
        ".css": "text/css",
        ".js": "text/javascript"
    }
}